<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<section class="content">
    <div class="form-horizontal">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <ol class=" float-sm-left">
                            <h2>Create Team</h2>
                        </ol>
                        <div class="card-body">
                            @using (Html.BeginForm("CreateTeam", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-12 row">
                                        @Html.LabelFor(model => model.sTeamName, "Team Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.sTeamName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.sTeamName, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(model => model.sDescription, "Description", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.sDescription, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.sDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 mb-4">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a class="btn btn-primary btn-search" href="@Url.Action("TeamList", "Home")"><i></i> &nbsp; Back To List </a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
                </div>
                </div>

            </div>
</section>


