<section class="content">
    <div class="form-horizontal">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <ol class=" float-sm-left">
                            <h2>Edit Team</h2>
                        </ol>
                        <div class="card-body">
                            @using (Html.BeginForm("EditTeam", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.iTeamMasterID)

                                <div class="form-group">
                                    <div class="col-md-12 row">
                                        @Html.LabelFor(model => model.sTeamName, "Team Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.sTeamName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.sTeamName, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(model => model.sDescription, "Desciption", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.sDescription, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.sDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 mb-4 mt-5">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        <a class="btn btn-primary btn-search" href="@Url.Action("TeamList", "Home")"><i></i> &nbsp; Back To List </a>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
                </div>
                </div>

            </div>
</section>


