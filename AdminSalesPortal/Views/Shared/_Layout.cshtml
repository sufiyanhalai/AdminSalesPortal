<style>
    /* Ensure the body and HTML elements take up the full viewport height */
    html, body {
        height: 100%;
        margin: 0; /* Remove default margin */
        padding: 0; /* Remove default padding */
        overflow-x: hidden; /* Ensure no horizontal overflow */
    }

    /* Ensure the container fills the entire width of the viewport */
    .container-fluid {
        width: 100%;
        margin-right: auto;
        margin-left: auto;
    }

    /* Ensure the table inside the container does not extend beyond the viewport width */
    .table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
    }
    .navbar-brand {
    display: block;
    
    margin-right: 0;
    margin-left: 60px;
   
    line-height: inherit;
    white-space: nowrap;
}
    .navbar {
        position: relative;
        min-height: 50px;
        margin-bottom: 0px;
        border: 1px solid transparent;
    }
    .navbar-expand .navbar-nav .nav-link {
        padding-right: 0;
        padding-left: 2.3rem;
    }
@@media (min-width: 768px) {
    .navbar-expand {
        flex-flow: row nowrap;
        justify-content: center; /* Center the content horizontally */
    }
}

</style>
